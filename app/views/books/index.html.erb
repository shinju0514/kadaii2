<h1>books</h1>

<table>
 	 <thead>
		   <tr>
			   <th>Title</th>
			   <th>Body</th>
		   </tr>
	  </thead>
	  <tbody>
	  <% @books.each do|book| %>
			 <tr>
			  <td><%= book.title %></td>
			  <td><%= book.body %></td>
			  <td><%= link_to 'Show', show_book_path(book.id) %></td>
     <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
     <td><%= link_to 'Destroy',destroy_book_path(book.id), method: :delete , "data-confirm" => "Are you sure?" %></td>
			 </tr>
		<% end %>
	 </tbody>
 </table>

<% if @book.errors.any? %>
 <%= @book.errors.count %>error happened
  <ul>
 <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
 <% end %>
  </ul>
<% end %>

<%= form_with model:@book do |f| %>
<h2>New book</h2>
<h4>Title</h4>
<%= f.text_field:title %>
<h4>Body</h4>

<%= f.text_area:body %>
<%= f.submit 'Create Book' %>

<% end %>